{
	"$schema": "https://typedoc.org/schema.json",
	"include": ["src/*"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"rootDir": ".",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "es2016",
		"module": "esnext",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"lib": ["esnext", "dom"],
		"declaration": true,
		"declarationDir": ".",
		"noEmitOnError": true
	}
}
