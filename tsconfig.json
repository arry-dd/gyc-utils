{
	"include": ["src/*", "test/*"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"rootDir": ".",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "es3",
		"module": "esnext",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"lib": ["esnext", "dom"],
		"declaration": true,
		"declarationDir": ".",
		"noEmitOnError": true,
		"paths": {
			"@/*": ["src/*"]
		}
	}
}
